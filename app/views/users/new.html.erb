<!-- app/views/users/new.html.erb -->
<h1 class="text-3xl font-bold mb-6 text-center">Sign Up</h1>

<%= form_with(model: @user, local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_field :name, class: "w-full px-3 py-2 border rounded shadow focus:outline-none focus:ring-2 focus:ring-indigo-400" %>
  </div>

  <div class="mb-4">
    <%= form.label :email, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.email_field :email, class: "w-full px-3 py-2 border rounded shadow focus:outline-none focus:ring-2 focus:ring-indigo-400" %>
  </div>

  <div class="mb-4">
    <%= form.label :password, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.password_field :password, class: "w-full px-3 py-2 border rounded shadow focus:outline-none focus:ring-2 focus:ring-indigo-400" %>
  </div>

  <div class="mb-4">
    <%= form.label :password_confirmation, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.password_field :password_confirmation, class: "w-full px-3 py-2 border rounded shadow focus:outline-none focus:ring-2 focus:ring-indigo-400" %>
  </div>

  <%= form.submit "Sign Up", class: "bg-yellow-400 hover:bg-yellow-500 text-gray-900 font-bold px-4 py-2 rounded-lg shadow-lg transition duration-200" %>
<% end %>
