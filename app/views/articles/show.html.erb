<h1 class="text-3xl font-bold mb-4"><%= @article.title %></h1>
<p class="mb-6 whitespace-pre-line"><%= @article.body %></p>

<div class="flex space-x-4">
  <!-- Edit button -->
  <%= link_to "Edit", edit_article_path(@article), class: "bg-yellow-400 hover:bg-yellow-500 text-white font-semibold px-4 py-2 rounded shadow-md transition duration-200" %>

  <!-- Delete button -->
<%= form_with(model: @article, method: :delete, data: { confirm: "Are you sure you want to delete this article?" }, class: "inline") do |form| %>
  <%= form.submit "Delete", class: "bg-red-500 hover:bg-red-600 text-white font-semibold px-4 py-2 rounded shadow-md transition duration-200" %>
<% end %>
</div>
